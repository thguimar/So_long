%.o:%.c
	@$(CC) $(CFLAGS) -c $^ -o $@

$(MLX): 
	$(MAKE) -C $(MLX_DIR)

$(LIBFT):
	@make -C $(LIBFT_PATH) all

$(OBJ_DIR)/%.o: sources/%.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	make -C $(LIBFT_PATH) clean
	@rm -f *.o

fclean: clean
	make -C $(LIBFT_PATH) fclean
	@rm -f $(NAME) $(OBJECTS)

re: fclean all
