NAME 	= so_long

CC 		= cc

CFLAGS 	= -Wall -Wextra -Werror -g #-fsanitize=address

MLX_DIR = ./mlx/

OBJ_DIR = objects
OBJECTS= $(SRC:sources/%.c=%.o)

LIBFT_PATH = ./libft
LIBFT = $(LIBFT_PATH)/libft.a

SRCS 	=	./sources/ft_join_strings.c\
			./sources/ft_itoa.c\
			./sources/ft_get_map.c\
			./sources/movement.c\
			./sources/put_image.c\
			./sources/ft_put_text.c\
			./get_next_line/get_next_line_utils.c\
			./get_next_line/get_next_line.c	\
			./sources/check_file.c\
			./sources/map_utils.c\
			./sources/check_map.c\
			./sources/ft_exit_door.c\
			./sources/so_long.c\
			./sources/put_img_utils.c\
			./sources/cleaner.c\
			./sources/more1.c\
			./sources/more2.c

all: $(NAME)

$(NAME) : $(OBJS) $(LIBFT)
	@$(CC) $(CFLAGS) $(SRCS) -L./minilibx-linux -lmlx_Linux -lXext -lX11 -o $@ $(LIBFT)

