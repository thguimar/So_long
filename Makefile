NAME 	= so_long

CC 		= cc

CFLAGS 	= -Wall -Wextra -Werror -g

MLX_DIR = ./mlx/
MLX = $(MLX_DIR)libmlx.a -lXext -lX11 -lm -lz

SRCS 	=	./sources/ft_join_strings.c\
			./sources/ft_itoa.c\
			./sources/ft_get_map.c\
